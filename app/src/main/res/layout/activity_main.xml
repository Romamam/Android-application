<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F34791"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/downloadVideo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="#DCDCDC"
        android:hint="   Enter URL Video"
        android:inputType="textUri"
        android:translationX="60dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/createVideo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Download"
        android:translationX="110dp"
        android:translationY="200dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:text="Paste TikTok Video Link and Click Download to start downloading..."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:translationX="20dp"
        android:typeface="monospace"></TextView>


</RelativeLayout>